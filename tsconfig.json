{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "Pages/**/*",
    "src/**/*",
    "**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".expo",
    ".git"
  ],
  "extends": "expo/tsconfig.base"
}
